<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:id="@+id/section_project"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/etxt_bg"
        android:gravity="center"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spnr_project"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="8"
            android:paddingLeft="@dimen/padding_4"
            android:singleLine="true"
            android:spinnerMode="dropdown">

        </Spinner>

        <LinearLayout
            android:id="@+id/ll_spn_project"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_36"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_13"
                android:gravity="center_vertical"
                android:text="Assigned Projects"
                android:textColor="@color/black" />

        </LinearLayout>
    </RelativeLayout>

    <com.bhavesh.surveyapp.utils.customview.MicrosoftTaileButton
        android:id="@+id/start_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg_primery"
        android:text="Start Survey"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_16"
        android:visibility="gone" />
</RelativeLayout>